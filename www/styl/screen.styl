@import colors
@import prefixes
body
    margin 0px
    font-family arial, sans-serif
    #unemployment
        position absolute
        top 0px
        left 0px
        width 100%
        height 200px
        svg
            .line
                stroke-width 2px
                fill none
            .area
                fill-opacity 0.4
                &:hover
                    fill-opacity 0.8
            .axis.y
                text
                    font-size 0.72em
                .tick
                    line
                        stroke #555
                        stroke-dasharray 5, 5
                        stroke-width 0.5px


    #story
        position absolute
        top 179px
        height 200px
        width 100%
        borderColor = HNBlue
        a.yearSelector
            display block
            position absolute
            text-align center
            padding-top 6px
            height (30px - @padding-top)
            background white
            border-top 2px solid borderColor
            border-bottom 2px solid borderColor
            .arrow
                display block
                position absolute
                top -2px
                right -20px
                triangleHeight = 20px
                border-top (triangleHeight * 0.86) solid transparent
                border-bottom (triangleHeight * 0.86) solid transparent
                border-left triangleHeight solid borderColor
                width 0px
                height 0px
                span
                    position absolute
                    top -15px
                    left -21px
                    triangleHeight = 18px
                    border-top (triangleHeight * 0.86) solid transparent
                    border-bottom (triangleHeight * 0.86) solid transparent
                    border-left triangleHeight solid white

            &:first-child
                .arrow
                    display none
            &:active
            &.active
                background borderColor
                .arrow
                    border-left-color borderColor !important
            &.active
            &:active
            &:hover
                + a .arrow
                    border-left-color white
                .arrow span
                    display none
            &:hover
                cursor pointer
                border-color darken(borderColor, 20%)
                background darken(borderColor, 20%)
                .arrow
                    border-left-color darken(borderColor, 20%) !important


        &.js
            .year
                position absolute
                top 20px
                display none
                h2
                p
                    margin-left 15px
                    margin-right 15px
                &.active
                    display block
    #world
        position absolute
        top 400px
        left 0px
        width 100%
        svg
            background HNBlue
            .boundary
                fill none
            .land
                fill #fff

